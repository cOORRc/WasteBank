<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page_regi_choiceLogin"
    android:background="#fafafa">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/box_name_regiChoiceLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="20sp"
        android:ems="10"
        android:fontFamily="@font/prompt_thin"
        android:gravity="top|center"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/box_pass_regiChoiceLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:fontFamily="@font/prompt_thin"
        android:gravity="top|center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:layout_below="@+id/box_name_regiChoiceLogin"
        />

    <Button
        android:id="@+id/butt_login"
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box_pass_regiChoiceLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="@drawable/btn_round"
        android:fontFamily="@font/prompt_thin"
        android:padding="15dp"
        android:text="@string/regiter_login"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/box_pass_regiChoiceLogin"
        />

    <ImageButton
        android:id="@+id/login_face"
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/butt_login"
        android:src="@drawable/facec"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

        <!--<com.facebook.login.widget.LoginButton-->
        <!--android:id="@+id/login_face"-->
        <!--android:layout_width="256dp"-->
        <!--android:layout_height="52dp"-->
        <!--android:layout_below="@+id/butt_login"-->
        <!--android:layout_marginTop="10sp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_gravity="center_horizontal" />-->

    <ImageView
        android:id="@+id/line_grey"
        android:layout_width="300sp"
        android:layout_height="3sp"
        android:background="@color/grey_500"
        android:layout_below="@+id/login_face"
        android:layout_marginTop="40sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/butt_newRegi"
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_newregi"
        android:fontFamily="@font/prompt_thin"
        android:padding="15dp"
        android:layout_below="@+id/line_grey"
        android:layout_marginTop="25sp"
        android:text="@string/new_register_choiceLogin"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt_login"/>


</RelativeLayout>